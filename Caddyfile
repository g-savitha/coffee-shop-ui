:80 {
    # Log to stdout for Railway logging
    log {
        output stdout
        format json
    }
    
    # Root directory for the static files
    root * /srv
    
    # Enable file server
    file_server
    
    # Handle SPA routing - fallback to index.html for client-side routing
    try_files {path} /index.html
    
    # Optimize for static file delivery
    encode gzip
    
    # Health check endpoint
    handle /health {
        respond "ok" 200
    }
} 